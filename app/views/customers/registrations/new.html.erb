<div class="container">
  <div class="row">
    <div class="col ">
      <h4 class="mt-4 mb-4"><span class="bg-light">　新規会員登録　</span></h4>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <form>
        <div class="form-group form-inline">
          <%= f.label :"名前", class:"col-sm-3 control-label" %>
          <%= f.label :last_name, '(姓)', class:"col-sm-1 control-label" %>
          <%= f.text_field :last_name, autofocus: true, placeholder: "令和", class:"col-sm-2 form-control" %>
          <%= f.label :first_name, '(名)', class:"col-sm-1 control-label" %>
          <%= f.text_field :first_name, autofocus: true, placeholder: "道子", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :"フリガナ", class:"col-sm-3 control-label" %>
          <%= f.label :last_name_kana, '(セイ)', class:"col-sm-1 control-label" %>
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ", class:"col-sm-2 form-control" %>
          <%= f.label :first_name_kana, '(メイ)', class:"col-sm-1 control-label" %>
          <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :email, 'メールアドレス', class:"col-sm-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-sm-4 control-label" %>
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :address, "住所", class:"col-sm-4 control-label" %>
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-sm-5 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :phone_number, "電話番号(ハイフンなし)", class:"col-sm-4 control-label" %>
          <%= f.text_field :phone_number, autofocus: true, placeholder: "00000000000", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :password, 'パスワード(6文字以上)', class:"col-sm-4 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :password_confirmation,'パスワード(確認用)', class:"col-sm-4 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-2 form-control" %>
        </div>
        <div class="actions text-center col-sm-10 ml-3">
          <%= f.submit "新規登録" ,class:"col-sm-3 btn btn-success btn-lg mt-3 mb-3" %>
        </div>
      </form>
      <% end %>
      
      <h4 class="mt-4 mb-4"><span class="bg-light">　既に登録済みの方　</span></h4>
      <p class="ml-5"><%= link_to "こちら", new_customer_session_path %>&nbsp;&nbsp;&nbsp;&nbsp;からログインしてください。</p>
    </div>
  </div>
</div>
