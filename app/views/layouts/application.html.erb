<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
<!--以下整え-->

      <nav class="navbar navbar-expand-lg navbar-light bg-warning shadow-sm">
        <div class="container">
          <a class="navbar-brand p-1 text-black" href="/">
            logo.png
          </a>
      <!--ログイン後に表示される文字とか-->
          <id class="notice"><%= flash[:notice] %></id>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
<!--会員がログインしている時-->
              <% if customer_signed_in? %>
                <%= render 'layouts/customer_header' %>
<!--管理者がログインしている時-->
              <% elsif admin_signed_in? %>
                <%= render 'layouts/admin_header' %>
              <% else %>
<!--ログインしていないユーザー-->
                 <li class="nav-item">
                  <%= link_to about_path, class: 'nav-link text-dark' do %>
                  About
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to user_path(current_user.id), class: 'nav-link text-dark' do %>
                  商品一覧
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                  新規登録
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_customer_session_path, class: 'nav-link text-dark' do %>
                  ログイン
                  <% end %>
                </li>
              <% end %>

    </header>

    <main>
       <%= yield %>
    </main>

  </body>
</html>
