<div class="container">
  <div class="row">
    <div class="col">

      <h6 class="mt-4 mb-4 ml-5"><span class="bg-light">　管理者ログイン　</span></h5>

      <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <div class="form-group form-inline">
          <%= f.label :email, 'メールアドレス', class:"col-sm-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class:"form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :password, 'パスワード', class:"col-sm-4 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>
        <div class="actions text-center col-sm-9 mt-4">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>