<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="mt-4 mb-4"><span class="bg-light">　マイページ　</span><h4>
      <div class="row">
          <h4 class="font-weight-bold col-sm-2">登録情報<h4>
          <%= link_to "編集する", edit_customer_path(current_customer), class:"btn btn-success" %>
      </div>
      <table class="table table-bordered mt-4 mb-4">
        <tr>
          <td class="table-active">氏名</td>
          <td><%= @customer.last_name %>&nbsp;&nbsp;<%= @customer.first_name %></td>
        </tr>
        <tr>
          <td class="table-active">カナ</td>
          <td><%= @customer.last_name_kana %>&nbsp;&nbsp;<%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td class="table-active">郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td class="table-active">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="table-active">電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td class="table-active">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="row mt-4 mb-4">
        <h4 class="font-weight-bold col-sm-2">配送先<h4>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-primary" %>
      </div>
      <div class="row mt-4 mb-4">
        <h4 class="font-weight-bold col-sm-2">注文履歴<h4>
        <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
      </div>
    </div>
  </div>
</div>