
 <div class="container">
   <div class="row">
     <div class="col-lg-5">
       <h1>商品一覧</h1>
       <h3>全<%=Product.count%>件</h3>
     </div>
   </div>
 </div>

 <div class="container">
   <div class="row mx-auto">
       <% @products.each do |product| %>
         <div class="col-lg-3 col-md-4 col-sm-10 mb-5">
           <%=link_to attachment_image_tag(product, :image, width:"90%", format: 'jpeg', fallback: "no_image.jpg"), product_path(product) %>
            <div class="d-block">
              <%= product.name %>
              <div class="d-block">
                ¥<%= product.price %>円
              </div>
            </div>
         </div>
       <% end %>
   </div>
 </div>

 <div class="container">
   <div class="row">
     <div class="col-lg-5">
       <%= paginate @products %>
     </div>
   </div>
 </div>

