<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <h4 class="mt-4 mb-4"><span class="bg-light">　配送先登録 / 一覧　</span></h4>
      <%= form_with model:@address, local:true do |f| %>
        <div class="form-group form-inline">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-sm-4 control-label" %>
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class:"col-sm-2 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :address, "住所", class:"col-sm-4 control-label" %>
          <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class:"col-sm-5 form-control" %>
        </div>
        <div class="form-group form-inline">
          <%= f.label :address_name, "宛名", class:"col-sm-4 control-label" %>
          <%= f.text_field :address_name, autofocus: true, placeholder: "令和道子", class:"col-sm-2 form-control" %>
        </div>
        <div class="actions text-center col-sm-10 ml-3">
          <%= f.submit "新規登録" ,class:"col-sm-3 btn btn-success btn-lg mt-3 mb-3" %>
        </div>
      <% end %>
      <div class="col-md-9">
      <table class="table table-bordered mt-4 mb-4">
        <thead>
          <tr>
            <th class="table-active">郵便番号</th>
            <th class="table-active">住所</th>
            <th class="table-active">宛名</th>
            <th colspan="4" class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |shipping| %>
            <tr>
              <td><%= shipping.postal_code %></td>
              <td><%= shipping.address %></td>
              <td><%= shipping.address_name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(shipping), class:"btn btn-success" %>
                <%= link_to "削除する", address_path(shipping), method: :delete, class:"btn btn-danger ml-3" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
