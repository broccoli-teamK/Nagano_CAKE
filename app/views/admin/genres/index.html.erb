
<h4>ジャンル一覧・追加</h4>

<%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :genre_name, 'ジャンル名' %>
    <%= f.text_field :genre_name, placeholder: "ジャンル名", size: "20x3" %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  </div>
<% end %>


<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th text_align:"center">ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td>
        <%= genre.genre_name %>
      </td>
      <td><%= link_to "編集する",  edit_admin_genre_path(genre.id),  class: "btn btn-success" %></td>
    </tr>
  </tbody>
  <% end %>
</table>