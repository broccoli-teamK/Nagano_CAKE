  <div class="row">
    <div class="col"></div>
      <h4 class="mt-4 mb-4"><span class="bg-light">　商品詳細　</span></h4>
      <%= attachment_image_tag(@product, :image , :fill, 200, 200, format: 'jpeg', fallback: "no_image.jpg") %>
         <table class="table table-borderless">
