              <th>販売ステータス<span class="ml-5"><%= @product.sales_status %></span></th>
            </tr>
        </table>
      </div>      
    </div> 
<div class="text-center">
  <%= link_to "編集する", edit_admin_product_path(@product), class: "btn btn-success" %>
</div> 
